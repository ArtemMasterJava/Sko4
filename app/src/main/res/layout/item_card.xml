<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:foreground="@drawable/ripple_selector"
    card_view:cardBackgroundColor="@color/bg_color"
    card_view:cardElevation="3dp"
    android:clickable="true"
    >

    <RelativeLayout
        android:id="@+id/item_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/item_preview"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:scaleType="centerCrop"
            android:tint="@color/tint_card"
            android:tintMode="src_atop"
            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/item_day"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/item_month"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="@color/primary"
            android:background="@color/item_pressed"
            />


        <TextView
            android:id="@+id/item_month"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_day"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:background="@color/accent"
            />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_preview"
            android:textSize="23sp"
            android:textColor="@color/accent"
            android:paddingTop="2dp"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="@color/item_pressed"
            />

        <TextView
            android:id="@+id/item_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:textSize="18sp"
            android:textColor="@color/semi_card"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableLeft="@drawable/ic_room_black_18dp"
            />

        <TextView
            android:id="@+id/item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:layout_alignBaseline="@+id/item_plus"
            android:textSize="17sp"
            android:textColor="@color/semi_card"
            android:background="@color/primary"
            android:maxLines="1"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>